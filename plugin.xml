<plugin name='facebook-sdk' version='0.2.0' grailsVersion='2.0.4 &gt; *'>
  <author>Benoit Hediard</author>
  <authorEmail>ben@benorama.com</authorEmail>
  <title>Facebook SDK Grails Plugin</title>
  <description>The Facebook SDK Plugin allows your Grails application to use the Facebook Platform and develop Facebook apps on Facebook.com or on web sites (with Facebook Connect).
It is a port of the official Facebook PHP SDK V3.1.1 to Grails 2.0.
</description>
  <documentation>http://grails.org/plugin/facebook-sdk-grails-plugin/blob/master/README.md</documentation>
  <type>FacebookSdkGrailsPlugin</type>
  <resources>
    <resource>grails.plugins.facebooksdk.FacebookSdkFilters</resource>
    <resource>grails.plugins.facebooksdk.FacebookAppService</resource>
    <resource>grails.plugins.facebooksdk.FacebookJSTagLib</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://plugins.grails.org' />
    <repository name='http://repo.grails.org/grails/plugins' url='http://repo.grails.org/grails/plugins/' />
    <repository name='http://repo.grails.org/grails/core' url='http://repo.grails.org/grails/core/' />
    <repository name='grailsCore' url='http://svn.codehaus.org/grails/trunk/grails-plugins' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
    <repository name='https://repository.sonatype.org/content/repositories/central' url='https://repository.sonatype.org/content/repositories/central/' />
  </repositories>
  <dependencies />
  <plugins>
    <compile>
      <plugin group='org.grails.plugins' name='resources' version='latest.integration' />
    </compile>
    <runtime>
      <plugin group='org.grails.plugins' name='jquery' version='1.7.1' />
      <plugin group='org.grails.plugins' name='twitter-bootstrap' version='2.0.2.25' />
      <plugin group='org.grails.plugins' name='hibernate' version='2.0.4' />
    </runtime>
    <build>
      <plugin group='org.grails.plugins' name='tomcat' version='2.0.4' />
    </build>
  </plugins>
  <runtimePluginRequirements />
  <behavior />
</plugin>